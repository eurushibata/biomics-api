library(rmongodb)
library(plyr)

host <- "localhost:27017"
db <- "biomics"

conn <- mongo.create(host=host, db=db)


export = data.frame(stringAsFactors = FALSE)
cursor <- mongo.find(conn, "biomics.roadmap")
i = 1
while(mongo.cursor.next(cursor))
{
	tmp = mongo.bson.to.list(mongo.cursor.value(cursor))
	tmp.df = as.data.frame(unlist(tmp)), stringAsFactors = FALSE)
	export = rbind.fill(export, tmp.df)
	i = i+1
}